!!!
%html
  %head
    %title MindList
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = csp_meta_tag
  %body
    .row-fluid
      .span10.offset1
        .hero-unit.text-center
          %h1
            Todo List
          %p
            Welcome to your personal todo list. Powered by: DEHVRY
          = link_to 'New task', new_task_path, class: 'btn btn-primary', remote: true
          = link_to 'New task', new_task_path, class: 'btn btn-primary', remote: true, data: {toggle: "modal", target: "#modal"}
          #modal.modal.fade

    = yield
